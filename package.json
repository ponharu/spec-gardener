{
  "name": "spec-gardener",
  "version": "0.0.0-semantic-release",
  "private": false,
  "description": "GitHub Action that refines issue and pull request specs via external AI CLIs.",
  "keywords": ["github", "github-actions", "ai", "cli", "spec"],
  "homepage": "https://github.com/ponharu/spec-gardener#readme",
  "bugs": {
    "url": "https://github.com/ponharu/spec-gardener/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ponharu/spec-gardener.git"
  },
  "author": "ponharu",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "check": "bun run typecheck && bun run lint && bun run test",
    "lint": "bun oxlint",
    "lint-fix": "bun oxlint --fix",
    "format": "bun oxfmt --no-error-on-unmatched-pattern",
    "typecheck": "tsc --noEmit --pretty",
    "test": "bun test"
  },
  "dependencies": {
    "@actions/core": "2.0.2",
    "octokit": "4.1.4"
  },
  "devDependencies": {
    "bun-types": "1.3.5",
    "lefthook": "2.0.13",
    "lint-staged": "16.2.7",
    "oxlint": "1.38.0",
    "oxfmt": "0.23.0",
    "semantic-release": "25.0.2",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@semantic-release/github": "12.0.2",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.6",
  "engines": {
    "bun": ">=1.3.6"
  }
}
