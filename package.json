{
  "name": "spec-gardener",
  "version": "0.0.0-semantic-release",
  "private": false,
  "description": "GitHub Action that refines issue and pull request specs via external AI CLIs.",
  "keywords": [
    "ai",
    "cli",
    "github",
    "github-actions",
    "spec"
  ],
  "homepage": "https://github.com/ponharu/spec-gardener#readme",
  "bugs": {
    "url": "https://github.com/ponharu/spec-gardener/issues"
  },
  "license": "Apache-2.0",
  "author": "ponharu",
  "repository": {
    "type": "git",
    "url": "https://github.com/ponharu/spec-gardener.git"
  },
  "type": "module",
  "scripts": {
    "check": "bun run typecheck && bun run lint && bun run test",
    "lint": "bun oxlint",
    "lint-fix": "bun oxlint --fix",
    "format": "bun oxfmt --no-error-on-unmatched-pattern",
    "typecheck": "tsc --noEmit --pretty",
    "test": "bun test"
  },
  "dependencies": {
    "@actions/core": "3.0.0",
    "octokit": "5.0.5",
    "repair-json-stream": "1.3.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/github": "12.0.2",
    "@semantic-release/release-notes-generator": "14.1.0",
    "bun-types": "1.3.7",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "lefthook": "2.0.16",
    "lint-staged": "16.2.7",
    "oxfmt": "0.27.0",
    "oxlint": "1.42.0",
    "semantic-release": "25.0.2",
    "typescript": "5.9.3"
  },
  "engines": {
    "bun": ">=1.3.6"
  },
  "packageManager": "bun@1.3.6"
}
