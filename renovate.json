{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergePr",
    ":dependencyDashboard", 
    ":semanticCommits",
    ":maintainLockFilesWeekly",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "reviewers": ["ponharu"]
    }
  ],
  "rangeStrategy": "pin",
  "schedule": ["after 10pm every weekday", "before 3am every weekday"],
  "separateMultipleMajor": true,
  "timezone": "Asia/Tokyo"
}
